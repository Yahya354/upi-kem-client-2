<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#00000000"
    app:cardElevation="0dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:id="@+id/teks_buku_wadah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="25dp"
        android:background="@drawable/tombol_latihan">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/buku_teks_gembok"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ikon_gembok"
                android:contentDescription="" />

            <TextView
                android:id="@+id/buku_teks_nomor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No 1"
                android:textColor="#000000"
                android:textAllCaps="true"/>

        </LinearLayout>

        <TextView
            android:id="@+id/buku_teks_judul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Judul Teks"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="#000000"/>

    </LinearLayout>

</android.support.v7.widget.CardView>