<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PetunjukActivity"
    android:background="@color/hijau">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/transparan"
        app:elevation="0dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll"
            app:contentInsetStart="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/tombol_keluar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ikon_keluar_putih"
                    android:background="@color/transparan"
                    android:contentDescription="@string/menu" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="0dp"
                    android:text="@string/petunjuk"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textColor="@color/putih"
                    android:textSize="24sp"
                    android:layout_marginEnd="30dp"/>

            </LinearLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Klik tombol latihan pada beranda"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:padding="20dp"
                    android:background="@drawable/boks_masukan"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2. Klik teks secara berurutan, dimulai dari teks pertama hingga teks terakhir."
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:padding="20dp"
                    android:background="@drawable/boks_masukan"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3. Bacalah teks yang dipilih dengan seksama."
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:padding="20dp"
                    android:background="@drawable/boks_masukan"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4. Klik “selesai” apabila sudah selesai membaca teks."
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:padding="20dp"
                    android:background="@drawable/boks_masukan"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5. Jawablah pertanyaan yang tertera berdasarkan teks yang telah dibaca."
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:padding="20dp"
                    android:background="@drawable/boks_masukan"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="6. Setelah teks pertama selesai dibaca, lanjutkanlah dengan teks berikutnya."
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:padding="20dp"
                    android:background="@drawable/boks_masukan"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="7. Klik menu “grafik” apabila ingin melihat data statistik hasil latihan teks pertama hingga teks terakhir."
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:padding="20dp"
                    android:background="@drawable/boks_masukan"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>